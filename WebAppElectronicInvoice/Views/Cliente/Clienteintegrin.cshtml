@model WebAppElectronicInvoice.Models.MyViewModel

@{
    ViewBag.Title = "Clienteintegrin";
}

<h2>Cliente integrin</h2>

<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Pendientes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Clientes</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <h3>Clientes Pendientes</h3>
            <table id="tablaPendientes" class="table display">
                <thead>
                    <tr>
                        <th>
                            Ciclo
                        </th>
                        <th>
                            Codpredio
                        </th>
                        <th>
                            Identificación
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido 1
                        </th>
                        <th>
                            Apellido 2
                        </th>
                        <th>
                            Dirección
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pendientes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ciclo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Codpredio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Identificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido1_cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido2_Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion_cliente)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditCliente", new { id = item.Id_Cliente_integrin }) |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
            <h3>Clientes</h3>
            <table id="tablaClientes" class="table display">
                <thead>
                    <tr>
                        <th>
                            Ciclo
                        </th>
                        <th>
                            Codpredio
                        </th>
                        <th>
                            Identificación
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido 1
                        </th>
                        <th>
                            Apellido 2
                        </th>
                        <th>
                            Dirección
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Clientes)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ciclo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Codpredio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Identificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido1_cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido2_Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion_cliente)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditCliente", new { id = item.Id_Cliente_integrin }) |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    jQuery.noConflict();
    jQuery(document).ready(function ($) {
        console.log('Document is ready')
        $('#tablaPendientes').DataTable();
        $('#tablaClientes').DataTable();
        $('#myTab a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>

